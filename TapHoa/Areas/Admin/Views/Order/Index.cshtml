@model IEnumerable<TapHoa.Data.Dondathang>
@{
    ViewData["Title"] = "Order List ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h2 class="title">Order List</h2>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Maddh</td>
                <td>@item.Tenkh</td>
                <td>@item.Diachi</td>
                <td>@item.Sdt</td>
                <td>@item.Ngaydat.ToString("dd/MM/yyyy")</td>
                <td>@item.MattddhNavigation?.Tenttddh</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Maddh" class="btn btn-info btn-sm">View</a>
                    <a asp-action="EditStatus" asp-route-id="@item.Maddh" class="btn btn-warning btn-sm">Update Status</a>
                    <a href="@Url.Action("ViewOrderDetails", "OrderDetails", new { id = item.Maddh })" class="btn btn-secondary btn-sm">
                        Chi Tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        padding: 30px;
    }

    h2.title {
        margin-bottom: 20px;
        color: #007bff;
        text-align: center;
        font-size: 32px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #343a40;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: #fff;
        transition: background-color 0.3s;
    }

    .btn-info:hover {
        background-color: #138496;
        border-color: #117a8b;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
        transition: background-color 0.3s;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }
</style>

@model TapHoa.Data.Dondathang

@{
    ViewData["Title"] = "Edit Order Status";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<h2 class="title">@ViewData["Title"]</h2>

<form asp-action="EditStatus" method="post">
    <input type="hidden" asp-for="Maddh" />

    <div class="form-group">
        <label asp-for="Mattddh">Order Status</label>
        <select asp-for="Mattddh" class="form-control custom-select" asp-items="ViewBag.TrangThaiList">
            <option value="">Select Status</option>
        </select>
        <span asp-validation-for="Mattddh" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Status</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        padding: 30px;
    }

    h2.title {
        margin-bottom: 20px;
        color: #007bff;
        text-align: center;
        font-size: 32px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #495057;
    }

    .custom-select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ced4da;
        background-color: #ffffff;
        transition: border-color 0.3s;
    }

        .custom-select:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 4px;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

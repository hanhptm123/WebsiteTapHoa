@model TapHoa.Data.Hoadon

@{
    ViewData["Title"] = "Revenue Details by Invoice";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h2>Invoice Information</h2>
<p><strong>Invoice ID:</strong> @Model.Mahd</p>
<p><strong>Payment Date:</strong> @Model.Ngaythanhtoan?.ToString("dd/MM/yyyy")</p>
<p><strong>Employee:</strong> @Model.ManvNavigation?.Tennv</p>

<h2>Product Details</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chitiethoadons)
        {
            <tr>
                <td>@item.MaspNavigation?.Tensp</td>
                <td>@item.Soluong</td>
                <td>@item.Dongia.ToString("C")</td>
                <td>@(item.Soluong * item.Dongia).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

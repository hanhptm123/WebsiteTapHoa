@model TapHoa.Data.Thuonghieu
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Add brand</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateBrand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tenthuonghieu" class="control-label"> Brand name</label>
                <input asp-for="Tenthuonghieu" class="form-control" />
                <span asp-validation-for="Tenthuonghieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BrandList">Go back</a>
</div>


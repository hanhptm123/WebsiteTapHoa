@model TapHoa.Data.Sanpham
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Shop.cshtml";
}
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large" src="@Model.Hinhanh" alt="Product Image">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <img data-imgbigurl="@Model.Hinhanh1" src="@Model.Hinhanh1" alt="Product Image 1">
                        <img data-imgbigurl="@Model.Hinhanh2" src="@Model.Hinhanh2" alt="Product Image 2">
                        <img data-imgbigurl="@Model.Hinhanh3" src="@Model.Hinhanh3" alt="Product Image 3">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.Tensp</h3>
                    <div class="product__details__price">
                        @{
                            decimal originalPrice = Model.Gia;
                            decimal discountPercentage = (decimal)(Model.MakmNavigation?.Phantramgiam ?? 0);
                            decimal discountedPrice = originalPrice - (originalPrice * (discountPercentage / 100));
                        }

                        @if (discountPercentage > 0)
                        {
                            <span style="text-decoration: line-through;">@(Model.Gia.ToString("C"))</span>
                        }

                        @discountedPrice.ToString("C")
                    </div>
                    <p>@Model.Mota</p>

                    <!-- Form for Add to Cart -->
                    <form id="addToCartForm" method="post">
                        <input type="hidden" name="id" value="@Model.Masp" />
                        <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <input id="quantityInput" name="quantity" type="number" min="1" value="1" />
                                </div>
                            </div>
                        </div>
                        <button type="button" class="primary-btn" onclick="addToCart(event)">ADD TO CART</button>
                    </form>

                    <!-- Form for Add to Like -->
                    <form id="addToLikeForm" method="post">
                        <input type="hidden" name="id" value="@Model.Masp" />
                        <a href="javascript:void(0);" class="heart-icon" onclick="addToLike(event)">
                            <span class="icon_heart_alt"></span>
                        </a>
                    </form>

                    <ul>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        <li><b>Weight</b> <span>5005</span></li>
                        <li>
                            <b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Products</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@Model.Hinhanh">
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a asp-action="Details" asp-controller="Product" asp-route-id="@Model.Masp">@Model.Tensp</a></h6>
                        <h5>@Model.Gia.ToString("C")</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Add to Cart functionality
    function addToCart(event) {
        event.preventDefault();

        var form = document.getElementById('addToCartForm');
        var quantity = form.querySelector('input[name="quantity"]').value;
        var productId = form.querySelector('input[name="id"]').value;

        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: { id: productId, quantity: quantity },
            success: function (response) {
                if (response.success) {
                    alert("Product added to cart.");
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert("An error occurred while adding the product to the cart.");
            }
        });
    }

    // Add to Like functionality
    function addToLike(event) {
        event.preventDefault();

        var form = document.getElementById('addToLikeForm');
        var productId = form.querySelector('input[name="id"]').value;

        $.ajax({
            url: '@Url.Action("AddToLike", "Like")',
            type: 'POST',
            data: { id: productId },
            success: function (response) {
                if (response.success) {
                    $(".heart-icon").css("color", "red"); // Highlight the icon
                    alert(response.message); // Display success message
                } else {
                    alert(response.message); // Display error message
                }
            },
            error: function () {
                alert("An error occurred while adding the product to the favorites list.");
            }
        });
    }
</script>

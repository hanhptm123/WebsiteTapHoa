@model IEnumerable<TapHoa.Data.Sanpham>
@{
    ViewData["Title"] = "ViewProduct";
    Layout = "~/Views/Shared/_Shop.cshtml";
}

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    @await Component.InvokeAsync("Categories")
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg">
                                        <img src="@item.Hinhanh" alt="Product Image" class="img-fluid">
                                        <ul class="product__item__pic__hover">
                                            <li>
                                                <a href="javascript:void(0);" class="add-to-like d-flex justify-content-center align-items-center bg-light border rounded-circle text-dark" data-id="@item.Masp">
                                                    <i class="icon fa fa-heart-o"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);" class="add-to-cart d-flex justify-content-center align-items-center bg-light border rounded-circle text-dark" data-id="@item.Masp" data-quantity="1">
                                                    <i class="icon fa fa-shopping-cart"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a asp-action="Details" asp-controller="Product" asp-route-id="@item.Masp">@item.Tensp</a></h6>
                                        <div class="product__item__price">
                                            @if (item.MakmNavigation != null)
                                            {
                                                <span>$@(item.Gia * (1 - (decimal)(item.MakmNavigation.Phantramgiam / 100)))</span>
                                                <span class="original-price" style="text-decoration: line-through;">$@item.Gia</span>
                                            }
                                            else
                                            {
                                                <span>@item.Gia</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div>No products available</div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                var productId = $(this).data("id");
                var quantity = $(this).data("quantity");
                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: { id: productId, quantity: quantity },
                    success: function (response) {
                        if (response.success) {
                            alert("Product added to cart successfully!");
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("There was an error adding the product to the cart.");
                    }
                });
            });

            $(".add-to-like").click(function () {
                var productId = $(this).data("id");

                $.ajax({
                    url: '@Url.Action("AddToLike", "Like")', 
                    type: 'POST',
                    data: { id: productId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                        } else {
                            alert(response.message); 
                        }
                    },
                    error: function () {
                        alert("There was an error adding the product to the like list.");
                    }
                });
            });
        });
    </script>
}





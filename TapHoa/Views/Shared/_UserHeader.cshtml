<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <!-- Left Section -->
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__left">
                        <ul>
                            <li><i class="fa fa-envelope"></i> haydaycompany@gmail.com</li>
                            <li>Fresh goods - Fast delivery</li>
                        </ul>
                    </div>
                </div>
                <!-- Right Section -->
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right d-flex justify-content-end align-items-center">
                        <!-- Admin Page Link (Only for staff) -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Nhanvien"))
                        {
                            <a href="/Admin" class="btn btn-info me-3 rounded-pill px-4 py-2 shadow-sm d-flex align-items-center">
                                <i class="fa fa-cogs me-2"></i> Admin Page
                            </a>
                        }

                        <!-- User Authentication Dropdown -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-light dropdown-toggle rounded-pill px-4 py-2 shadow-sm" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user-circle me-2"></i> @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/Customer/Index"><i class="fa fa-user-circle"></i> Profile</a></li>
                                    <li><a class="dropdown-item" href="/Customer/OrderList"><i class="fa fa-shopping-bag"></i> Your Orders</a></li>
                                    <li><a class="dropdown-item" href="/address/addressList"><i class="fa fa-map-marker"></i> Address</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/accounts/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <!-- Login Link -->
                            <a href="/accounts/login" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                                <i class="fa fa-user me-2"></i> Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <div class="container">
        <div class="row">
            <!-- Logo -->
            <div class="col-lg-3">

﻿﻿<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/LayoutUser/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/LayoutUser/css/style.css" type="text/css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="container-fluid">
    <!-- Header Section Begin -->
    @await Html.PartialAsync("_UserHeader")
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__search__form">
                    <form asp-action="Search" asp-controller="Product" method="get" id="searchForm" class="d-flex">
                        <input type="text" id="searchInput" name="keyword" placeholder="What do you need?" class="form-control me-2" />
                        <button type="submit" class="site-btn btn btn-primary">SEARCH</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("breadcum", required: false)
    <div class="container-fruit">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <!-- Js Plugins -->
    @await Html.PartialAsync("_UserFooter")
    <script src="~/LayoutUser/js/jquery-3.3.1.min.js"></script>
    <script src="~/LayoutUser/js/bootstrap.min.js"></script>
    <script src="~/LayoutUser/js/jquery.nice-select.min.js"></script>
    <script src="~/LayoutUser/js/jquery-ui.min.js"></script>
    <script src="~/LayoutUser/js/jquery.slicknav.js"></script>
    <script src="~/LayoutUser/js/mixitup.min.js"></script>
    <script src="~/LayoutUser/js/owl.carousel.min.js"></script>
    <script src="~/LayoutUser/js/main.js"></script>
</body>
</html>

@model IEnumerable<TapHoa.Data.Sanpham>

<div class="product__discount">
    <div class="section-title product__discount__title">
        <h2>Sale Off</h2>
    </div>
    <div class="row">
        <div class="product__discount__slider owl-carousel">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4">
                        <div class="product__discount__item">
                            <div class="product__discount__item__pic">
                                <img src="@item.Hinhanh" alt="Hình ảnh sản phẩm" style="width: 100%; height: auto;">
                                <div class="product__discount__percent">-@item.MakmNavigation.Phantramgiam%</div>
                                <ul class="product__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li>
                                        <a href="javascript:void(0);" onclick="addToCart(@item.Masp)"><i class="fa fa-shopping-cart"></i></a>
                                    </li>
                                </ul>
                            </div>

                            <div class="product__discount__item__text">
                                <span>@item.MaloaispNavigation.Tenloaisp</span> <!-- Assuming this holds the category name -->
                                <h5><a asp-action="Details" asp-controller="Sanphams" asp-route-id="@item.Masp">@item.Tensp</a></h5>
                                <div class="product__item__price">
                                    @(decimal.Multiply(item.Gia, 1 - ((decimal)item.MakmNavigation.Phantramgiam / 100)).ToString("C"))
                                    <span>@((decimal)item.Gia).ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-lg-12">
                    <p>No discounted products available.</p>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function addToCart(productId) {
        $.ajax({
            url: '/CartItem/AddToCart',
            type: 'POST',
            data: { id: productId, soluong: 1 }, // Thêm với số lượng 1 (hoặc tùy chỉnh)
            success: function (response) {
                if (!response.success) {
                    alert(response.message); // Hiển thị lỗi nếu không đủ số lượng
                } else {
                    alert("Sản phẩm đã được thêm vào giỏ hàng!");
                }
            },
            error: function () {
                alert("Có lỗi xảy ra. Vui lòng thử lại sau.");
            }
        });
    }
</script>
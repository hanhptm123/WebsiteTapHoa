@model IEnumerable<TapHoa.Data.Loaisp>

<div class="row">
    <div class="hero__categories">
        <!-- Tiêu đề danh mục -->
        <div class="hero__categories__all d-block align-items-center">
            <i class="fa fa-bars ms-3"></i>
            <span class="ml-2 me-3">All Categories</span>
        </div>

        <!-- Các nút loại sản phẩm hiển thị theo chiều ngang -->
        <div id="categoryButtons" class="category-buttons mt-3" style="display: none; width: 100%; max-width: 600px;">
            <div class="d-flex flex-wrap">
                @foreach (var item in Model)
                {
                    <a class="category-btn btn bg-success m-2"
                       asp-controller="Sanphams"
                       asp-action="ByCategory"
                       asp-route-id="@item.Maloaisp">
                        <strong>@item.Tenloaisp</strong>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".hero__categories__all").click(function () {
            $("#categoryButtons").toggle(); // Hiển thị/ẩn các nút loại sản phẩm
        });
    });

</script>
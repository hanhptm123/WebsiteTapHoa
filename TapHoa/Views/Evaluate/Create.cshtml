@model TapHoa.Data.Danhgium

@{
    ViewData["Title"] = "Create New Evaluation";
    Layout = "~/Views/Shared/_User.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    @csrf
    <div class="form-group">
        <label for="Masp">Product</label>
        <select asp-for="Masp" class="form-control" asp-items="ViewBag.Masp"></select>
    </div>

    <div class="form-group">
        <label for="Makh">Customer</label>
        <select asp-for="Makh" class="form-control" asp-items="ViewData["Makh"]"></select>
    </div>

    <div class="form-group">
        <label for="Ngaydanhgia">Date</label>
        <input type="date" asp-for="Ngaydanhgia" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Diemdanhgia">Rating</label>
        <input type="number" asp-for="Diemdanhgia" class="form-control" min="1" max="5" />
    </div>

    <div class="form-group">
        <label for="Loidanhgia">Comment</label>
        <textarea asp-for="Loidanhgia" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="Hinhanh">Image</label>
        <input type="file" asp-for="Hinhanh" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

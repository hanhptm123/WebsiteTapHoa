@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_User.cshtml";
    System.Globalization.CultureInfo cul = new System.Globalization.CultureInfo("vi-VN");
    System.Globalization.NumberFormatInfo numberInfo = cul.NumberFormat;
}

@section breadcum {
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Checkout</h2>
                        <div class="breadcrumb__option">
                            <a href="@Url.Action("Index", "Home")">Home</a>
                            <a href="@Url.Action("Index", "CartItem")">Shopping Cart</a>
                            <span>Checkout</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<section class="checkout spad">
    <div class="container">
        <form asp-action="PlaceOrder" asp-controller="Checkout" method="post">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <h6 class="checkout__title">Billing Details</h6>
                    <div class="checkout__input">
                        <label for="full-name">Full Name <span>*</span></label>
                        <input type="text" id="full-name" name="tenkh" class="form-control" required>
                    </div>
                    <div class="checkout__input">
                        <label for="address">Address <span>*</span></label>
                        <input type="text" id="address" name="diachi" class="form-control" required>
                    </div>
                    <div class="checkout__input">
                        <label for="phone-number">Phone Number <span>*</span></label>
                        <input type="text" id="phone-number" name="sdt" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <h6 class="checkout__title">Payment & Shipping</h6>
                    <div class="checkout__input">
                        <label for="payment-method">Payment Method <span>*</span></label>
                        <select id="payment-method" name="mapttt" class="form-control" required>
                            @foreach (var method in ViewBag.PaymentMethods as List<TapHoa.Data.Phuongthucthanhtoan>)
                            {
                                <option value="@method.Mapttt">@method.Tenpttt</option>
                            }
                        </select>
                    </div>
                    <div class="checkout__input">
                        <label for="shipping-method">Shipping Method <span>*</span></label>
                        <select id="shipping-method" name="maptvc" class="form-control" required>
                            @foreach (var option in ViewBag.ShippingOptions as List<TapHoa.Data.Phuongthucvanchuyen>)
                            {
                                <option value="@option.Maptvc">@option.Tenptvc</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="checkout__order">
                        <h6 class="checkout__title">Your Order</h6>
                        <div class="checkout__order__products">Products <span>Total</span></div>
                        <ul>
                            @foreach (var item in (List<Cartitem>)ViewBag.CartItems)
                            {
                                <li>@item.Tensanpham <span>@item.Giasaugiam.ToString("N0")đ x @item.Soluong = @((decimal)item.Giasaugiam * item.Soluong).ToString("N0")đ)</span></li>
                            }
                        </ul>
                        <div class="checkout__order__subtotal">Subtotal <span>@ViewBag.Subtotal.ToString("N0") đ</span></div>
                        <div class="checkout__order__total">Total <span>@ViewBag.Total.ToString("N0") đ</span></div>
                        <button type="submit" class="site-btn">Place Order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<style>
    .breadcrumb-section {
        background-size: cover;
        background-position: center;
        padding: 30px 0;
    }

    .breadcrumb__text {
        color: #fff;
        margin-top: 20px;
    }

    .breadcrumb__option a {
        color: #fff;
        margin-right: 10px;
        text-decoration: none;
    }

    .breadcrumb__option span {
        color: #ddd;
    }

    .checkout.spad {
        padding: 60px 0;
    }

    .checkout__title {
        font-size: 1.5rem;
        color: #007bff;
        margin-bottom: 1rem;
        text-align: center;
        border-bottom: 2px solid #007bff;
        padding-bottom: 0.5rem;
    }

    .checkout__input {
        margin-bottom: 1rem;
    }

        .checkout__input label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
            color: #495057;
        }

        .checkout__input span {
            color: black;
        }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .checkout__order {
        border: 1px solid #e0e0e0;
        padding: 20px;
        margin-top: 30px;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .checkout__order__products,
    .checkout__order__subtotal,
    .checkout__order__total {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        font-size: 1rem;
        border-bottom: 1px solid #e0e0e0;
    }

    .checkout__order__subtotal {
        font-weight: bold;
    }

    .checkout__order__total {
        font-size: 1.2rem;
        font-weight: bold;
        border: none;
    }

    .site-btn {
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        padding: 10px 30px;
        border-radius: 50px;
        text-align: center;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .site-btn:hover {
            background-color: #0056b3;
        }
</style>

@{
    ViewBag.Title = "Order Success";
    Layout = "~/Views/Shared/_User.cshtml";
}

<style>
    .order-success-container {
        text-align: center;
        margin-top: 50px;
        background-color: #f4f7fa;
        padding: 50px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .order-success-container h2 {
            font-size: 32px;
            color: #4CAF50;
            margin-bottom: 20px;
        }

        .order-success-container p {
            font-size: 18px;
            color: #555;
            margin-bottom: 30px;
        }

        .order-success-container a {
            font-size: 18px;
            color: #fff;
            background-color: #4CAF50;
            padding: 12px 25px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .order-success-container a:hover {
                background-color: #45a049;
            }
</style>

<div class="order-success-container">
    <h2>Order Successful!</h2>
    <p>Thank you for shopping at our store. Your order has been successfully placed.</p>
    <a asp-action="Danhsachsp" asp-controller="Sanphams">Continue Shopping</a>
    <a asp-action="OrderDetails" asp-controller="Checkout">Order Details</a>
    <a asp-action="OrderList" asp-controller="Customer">View</a>
</div>

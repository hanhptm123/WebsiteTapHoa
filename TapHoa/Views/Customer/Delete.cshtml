@model TapHoa.Data.Khachhang

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this customer?</h3>

<div>
    <strong>Name:</strong> @Model.Tenkh
</div>
<div>
    <strong>Email:</strong> @Model.Email
</div>
<div>
    <strong>Phone:</strong> @Model.Sdt
</div>
<div>
    <strong>Address:</strong> @Model.Diachi
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Makh" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">No, Cancel</a>
</form>

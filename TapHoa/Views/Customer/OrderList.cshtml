@model IEnumerable<TapHoa.Data.Dondathang>

<h2>Lịch sử đơn hàng</h2>

@if (!Model.Any())
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng giá</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Maddh</td>
                    <td>@order.Ngaydat.ToString("dd/MM/yyyy")</td>
                    <td>@order.Tonggia</td>
                    <td>@order.MattddhNavigation?.Tenttddh</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", new { id = order.Maddh })" class="btn btn-primary btn-sm">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

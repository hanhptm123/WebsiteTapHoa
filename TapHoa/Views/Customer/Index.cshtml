@model IEnumerable<TapHoa.Data.Khachhang>

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Tenkh</td>
                <td>@customer.Email</td>
                <td>@customer.Sdt</td>
                <td>@customer.Diachi</td>
                <td>
                    <a href="@Url.Action("Details", "Customer", new { id = customer.Makh })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Customer", new { id = customer.Makh })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Customer", new { id = customer.Makh })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Customer")" class="btn btn-success">Create New Customer</a>

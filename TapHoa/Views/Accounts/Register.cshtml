@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/login-form.css" />
</head>
<form asp-action="Register" asp-controller="Accounts" method="post">
    <h1 class="h4 text-gray-900 mb-4">REGISTER</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    else if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert" id="successMessage">
            @TempData["SuccessMessage"]
        </div>
    }
    <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
        <input type="text" class="form-control" name="Tendangnhap" placeholder="Enter your username" required>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" name="Matkhau" placeholder="Enter your password" required>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword2">Confirm Password</label>
        <input type="password" class="form-control" name="MatkhauConfirm" placeholder="Confirm your password" required>
    </div>

    <input type="hidden" name="Chucvu" value="Khachhang">
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
    </div>
    <div class="mt-3">
        <p>Already have an account? <a href="/Accounts/Login">Login</a></p>
    </div>
</form>


@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<TapHoa.Data.Baiviet>

@{
    ViewData["Title"] = "BlogList";
}

<style>
    .hero {
        margin-bottom: 20px;
    }

    .blog__list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .blog__item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
</style>

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="hero__title">Welcome to  Blog</h3>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row blog__list">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 blog__item">
                <div class="blog__item__pic">
                    <img src="@item.Hinhanh" alt="">
                </div>
                <div class="blog__item__text">
                    <ul>
                        <li><i class="fa fa-calendar-o"></i> @item.Ngaydang</li>
                    </ul>
                    <h5><a href="#">@item.Tenbv</a></h5>
                    <p>@item.Noidung</p>
                </div>
            </div>
        }
    </div>
</div>
<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("BlogList", new { page = page }), new X.PagedList.Mvc.Core.PagedListRenderOptions
{
    LiElementClasses = new List<string> { "page-item" },
    PageClasses = new List<string> { "page-link" }
})
</div>
@model IEnumerable<TapHoa.Data.Sanpham>
@{
    ViewData["Title"] = "Danhsachsp";
    Layout = "~/Views/Shared/_Shop.cshtml";
}
<section class="product spad">
    <div class="container-fluid">
        <!-- Categories Component -->
        <div class="row justify-content-between">
            <div class="row">
                @await Component.InvokeAsync("Categories")
            </div>
            <!-- Product Section -->
            <div class="col-lg-9 col-md-8">
                @await Component.InvokeAsync("Discount")
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Sort By</span>
                                <select>
                                    <option value="0">Default</option>
                                    <option value="1">Price</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@Model.Count()</span> Products found</h6>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3">
                            <div class="filter__option">
                                <span class="icon_grid-2x2"></span>
                                <span class="icon_ul"></span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg">
                                        <img src="@item.Hinhanh" alt="Product Image" class="img-fluid">
                                        <ul class="product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a asp-action="AddToCart" asp-controller="CartItem" asp-route-id="@item.Masp"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a asp-action="Details" asp-controller="Sanphams" asp-route-id="@item.Masp">@item.Tensp</a></h6>
                                        <h5>@item.Gia.ToString("C")</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div>No products available</div>
                }

                <div class="product__pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

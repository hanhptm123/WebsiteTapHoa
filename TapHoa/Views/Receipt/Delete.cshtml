@model TapHoa.Data.Phieunhap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Confirmation</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center mb-4">Are you sure you want to delete this receipt?</h5>

            <div class="row">
                <div class="col-md-6">
                    <dl>
                        <dt class="fw-bold">Date</dt>
                        <dd>@Html.DisplayFor(model => model.Ngaynhap)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl>
                        <dt class="fw-bold">Total Amount</dt>
                        <dd>@Html.DisplayFor(model => model.Tongtien)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl>
                        <dt class="fw-bold">Employee Name</dt>
                        <dd>@Html.DisplayFor(model => model.ManvNavigation.Tennv)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4 text-center">
                <input type="hidden" asp-for="Mapn" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@model TapHoa.Data.Diachi

@{
    ViewData["Title"] = "Delete Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Address</h1>
<p>Are you sure you want to delete this address?</p>

<div style="max-width: 600px; margin: auto; background: #f8f9fa; padding: 20px; border-radius: 10px;">
    <p><strong>Recipient:</strong> @Model.Tennguoinhan</p>
    <p><strong>Phone Number:</strong> @Model.Sdt</p>
    <p><strong>Address:</strong> @Model.Diachi1</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Madc" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model TapHoa.Data.Diachi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_User.cshtml";
}

<h3>Create Address</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tennguoinhan" class="control-label">Recipient Name</label>
                <input asp-for="Tennguoinhan" class="form-control" />
                <span asp-validation-for="Tennguoinhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdt" class="control-label">PhoneNumber</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachi1" class="control-label">Address</label>
                <input asp-for="Diachi1" class="form-control" />
                <span asp-validation-for="Diachi1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AddressList">Go back</a>
</div>


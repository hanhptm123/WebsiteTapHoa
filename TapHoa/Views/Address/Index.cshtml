@{
    ViewData["Title"] = "Address List";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1>My Addresses</h1>
<a asp-action="Create" class="btn btn-primary">+ Add New Address</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Recipient Name</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr>
                <td>@address.Tennguoinhan</td>
                <td>@address.Sdt</td>
                <td>@address.Diachi1</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@address.Madc" class="btn btn-warning btn-sm">Update</a>
                    <a asp-action="Delete" asp-route-id="@address.Madc" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

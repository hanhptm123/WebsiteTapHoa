@{
    ViewData["Title"] = "Danh sách địa chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1>Địa chỉ của tôi</h1>
<a asp-action="Create" class="btn btn-primary">+ Thêm địa chỉ mới</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Tên người nhận</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr>
                <td>@address.Tennguoinhan</td>
                <td>@address.Sdt</td>
                <td>@address.Diachi1</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@address.Madc" class="btn btn-warning btn-sm">Cập nhật</a>
                    <a asp-action="Delete" asp-route-id="@address.Madc" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
